{% extends 'src/views/partials/layout.njk' %}
{% block content %}
    <div class="card">
        <img src="{{ character.image }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">
                    {{ character.name }}
                </h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the cardâ€™s content.</p>
                <table>
                    <tbody>
                        <tr>
                            <th>status</th>
                            <td>{{ character.status }}
                            </td>
                        </tr>
                        <tr>
                            <th>species</th>
                            <td>{{ character.species }}
                            </td>
                        </tr>
                        <tr>
                            <th>gender</th>
                            <td>{{ character.gender }}
                            </td>
                        </tr>
                        <tr>
                            <th>origin</th>
                            <td>{{ character.origin.name }}
                            </td>
                        </tr>
                        <th>location</th>
                        <td>{{ character.location.name }}
                        </td>
                    </tr>
                    <th>episodes</th>
                    <td>{{ character.episode.length }}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>{% endblock %}